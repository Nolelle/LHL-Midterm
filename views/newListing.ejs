<!DOCTYPE html>
<html lang="en">
  <head>
    <title>New Listing</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/nav-bar') %>
    <main style="margin: 1em">
      <form action="/new-post" method="POST">
        <!-- Title -->
        <div>
          <label for="title">Title</label>
          <input type="text" placeholder="What are you selling?" />
        </div>

        <!-- Price -->
        <div>
          <label for="price">Price</label>
          <input type="number" placeholder="$50" />
        </div>

        <!-- Description -->
        <div>
          <label for="description">Description</label>
          <input type="text" placeholder="Write a bit about your item" />
        </div>

        <!-- Condition -->
        <div>
          <label for="conditions">Condition</label>
          <select name="condition">
            <option>N/A</option>
            <option>Poor</option>
            <option>Good/Fair</option>
            <option>Excellent</option>
            <option>Near Mint</option>
          </select>
        </div>

        <!-- image -->
        <div>
          <label for="image">Image</label>
          <input type="text" placeholder="Post an image URL" />
        </div>

        <!-- category -->
        <div>
          <label for="category">Category</label>
          <select name="category">
            <option>FREE</option>
            <option>Vehicles</option>
            <option>Electronics</option>
            <option>Sports Goods</option>
            <option>Family</option>
            <option>Apparel</option>
            <option>Office Supplies</option>
            <option>Home and Garden</option>
            <option>Music & Instruments</option>
            <option>Toys & Games</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>
  </body>
</html>
