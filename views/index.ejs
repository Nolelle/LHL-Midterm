<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_nav-bar') %>
    <main style="margin: 1em;">
      <form action="/new-post" method="POST">

        <!-- Search -->
        <div>
          <label for="search-box">Search By Name</label>
          <input type="text" placeholder="Nike Shoes" style="width: 300px; margin: 1em">
        </div>

        <!-- Price -->
        <!-- min -->
        <div class="min-max">
          <div>
            <label for="min">Minimum Price</label>
            <input type="number" placeholder="1" style="width: 300px; margin: 1em">
          </div>
          <!-- max -->
          <div>
            <label for="max">Maximum Price</label>
            <input type="number" placeholder="1000" style="width: 300px; margin: 1em">
          </div>
        </div>
        <!-- categories -->
        <div>
          <label for="categories">Categories</label>
          <input type="number" placeholder="$50" style="width: 300px; margin: 1em">
        </div>

        <!-- Condition -->
        <div>
          <label for="condition" style="width: 300px; margin: 1em">Condition</label>
          <select name="languages" id="lang">
            <option value="poor">Poor</option>
            <option value="good-well">Good/Fair</option>
            <option value="excellent">Excellent</option>
            <option value="near-mint">Near Mint</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>
</body>

</html>
