<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <main style="margin: 1em;">
    <form action="/new-post" method="POST">

      <!-- Search -->
      <div>
        <label for="search-box">Search By Name</label>
        <input type="text" placeholder="Nike Shoes" style="width: 300px; margin: 1em">
      </div>

      <!-- Price -->
      <!-- min -->
      <div class="min-max">
        <div>
          <label for="min">Minimum Price</label>
          <input type="number" placeholder="1" style="width: 300px; margin: 1em">
        </div>
        <!-- max -->
        <div>
          <label for="max">Maximum Price</label>
          <input type="number" placeholder="1000" style="width: 300px; margin: 1em">
        </div>
      </div>

      <!-- Condition -->
      <div>
        <label for="categories" style="width: 300px; margin: 1em">Category</label>
        <select name="category" id="lang">
          <option>Vehicles</option>
          <option>Electronics</option>
          <option>Sports Goods</option>
          <option>Family</option>
          <option>Apparel</option>
          <option>Free Stuff</option>
          <option>Home and Garden</option>
          <option>Music & Instruments</option>
          <option>Toys & Games</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </main>
</body>

</html>
